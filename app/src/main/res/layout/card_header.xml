<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card.native.header_compound_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/card_simple_header">


    <TextView
        android:id="@+id/card_header_inner_simple_title"
        style="@style/card.native.header_simple_title"
        android:textSize="21sp"
        android:layout_width="fill_parent"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        tools:text="Тут день недели"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/card_header_subtitle"
        style="@style/card.native.header_simple_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        tools:text="И какоето описание"
        android:paddingBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp" />


</LinearLayout>