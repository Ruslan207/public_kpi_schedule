<?xml version="1.0" encoding="utf-8"?>
<com.goldenpiedevs.schedule.app.modules.CustomViews.ControllableNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/contentlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:background="#eeeeee"
                android:baselineAligned="true"
                android:focusableInTouchMode="false"
                android:orientation="horizontal"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/RelativeLayout_first"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/weekinf"
                            style="@style/card.native.header_simple_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:clickable="true"
                            android:text="@string/first_week"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#707070" />

                    </RelativeLayout>

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard0"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard1"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard2"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"

                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard3"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard4"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout"
                        />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard5"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/RelativeLayout_second"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/weekinf2"
                            style="@style/card.native.header_simple_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:clickable="true"
                            android:text="@string/second_week"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#707070" />
                    </RelativeLayout>

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard6"
                        style="@style/card_external"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />

                    <it.gmariotti.cardslib.library.view.CardViewNative
                        android:id="@+id/lessoncard7"
