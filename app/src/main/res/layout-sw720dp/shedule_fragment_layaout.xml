                        android:visibility="gone"

                        card:card_header_layout_resourceID="@layout/native_base_header_layout"
                        card:card_layout_resourceID="@layout/native_cardwithlist_layout" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/blank_navbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/contentlayout"
                android:layout_centerHorizontal="true"
                android:background="#eeeeee"
                android:visibility="invisible">

            </RelativeLayout>
        </RelativeLayout>
    </com.goldenpiedevs.schedule.app.modules.CustomViews.ControllableNestedScrollView>