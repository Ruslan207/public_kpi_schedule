<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Main.Activity" parent="Theme.Main.Activity.Base"/>

    <style name="Theme.Main.Activity.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.FirstRun.Activity" parent="Theme.Main.Activity.Base" />

    <style name="Theme.FullInfo.Activity" parent="Theme.Main.Activity.Base">
        <item name="android:homeAsUpIndicator">@drawable/homeasup</item>
    </style>

    <style name="Theme.Radio.Activity" parent="Theme.Main.Activity.Base">
        <item name="colorPrimary">#9C854F</item>
        <item name="colorPrimaryDark">#221205</item>
        <item name="colorAccent">#DBC79A</item>
    </style>

    <style name="Theme.Kpi_Schedule.pref" parent="android:Theme.Holo.Light.DarkActionBar">

        <item name="android:homeAsUpIndicator">@drawable/homeasup</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_kpi_schedule
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Kpi_Schedule.full</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Kpi_Schedule</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Kpi_Schedule</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Kpi_Schedule.full</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Kpi_Schedule.pref</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_kpi_schedule</item>
        <item name="android:actionModeSplitBackground">
            @drawable/cab_background_bottom_kpi_schedule
        </item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Kpi_Schedule
        </item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Kpi_Schedule.Widget</item>
    </style>

    <style name="Theme.Kpi_Schedule.full" parent="android:Theme.Holo.Light.DarkActionBar">

        <item name="android:homeAsUpIndicator">@drawable/homeasup</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Kpi_Schedule.full</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Kpi_Schedule.full</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Kpi_Schedule</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Kpi_Schedule.full</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Kpi_Schedule.full</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_kpi_schedule</item>
        <item name="android:actionModeSplitBackground">
            @drawable/cab_background_bottom_kpi_schedule
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Kpi_Schedule
        </item>

        <!-- Light.DarkActionBar specific -->

        <item name="android:itemTextAppearance">@style/MenuTextAppearance.full</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Kpi_Schedule.Widget.full</item>
    </style>

    <style name="Theme.Kpi_Schedule.FirstRun" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar.Solid.Kpi_Schedule" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_kpi_schedule</item>
        <item name="android:backgroundSplit">@color/primary</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kpi_Schedule</item>
        <item name="android:titleTextStyle">@style/Kpi_Schedule.ActionBar.TitleTextStyle</item>

        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="ActionBar.Solid.Kpi_Schedule.pref" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_kpi_schedule</item>
        <item name="android:backgroundSplit">@color/primary</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kpi_Schedule</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>

        <item name="android:icon">@drawable/transporate</item>
        <item name="android:logo">@drawable/transporate</item>
        <item name="android:titleTextStyle">@style/Kpi_Schedule.ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Kpi_Schedule.full" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundSplit">@color/primary</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kpi_Schedule</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>

        <item name="android:icon">@drawable/transporate</item>
        <item name="android:logo">@drawable/transporate</item>

        <item name="android:titleTextStyle">@style/Kpi_Schedule.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Kpi_Schedule.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBar.Transparent.Kpi_Schedule" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_kpi_schedule</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Kpi_Schedule</item>
    </style>

    <style name="PopupMenu.Kpi_Schedule" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kpi_schedule</item>
    </style>

    <style name="DropDownListView.Kpi_Schedule" parent="android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_kpi_schedule</item>
    </style>
    <style name="DropDownListView.Kpi_Schedule.full" parent="android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_full</item>
    </style>

    <style name="ActionBarTabStyle.Kpi_Schedule" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_kpi_schedule</item>
    </style>

    <style name="DropDownNav.Kpi_Schedule" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_ab_kpi_schedule</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kpi_schedule</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_kpi_schedule</item>
    </style>

    <style name="DropDownNav.Kpi_Schedule.full" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_ab_kpi_schedule</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_full</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_full</item>
    </style>

    <style name="PopupMenu.Kpi_Schedule.full" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_full</item>
    </style>

    <style name="ProgressBar.Kpi_Schedule" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_kpi_schedule</item>
    </style>

    <style name="ActionButton.CloseMode.Kpi_Schedule" parent="android:Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_kpi_schedule</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Kpi_Schedule.Widget" parent="android:Theme.Holo.Light">
    <item name="android:popupMenuStyle">@style/PopupMenu.Kpi_Schedule</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Kpi_Schedule</item>
</style>

    <style name="Theme.Kpi_Schedule.Widget.full" parent="android:Theme.Holo.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu.Kpi_Schedule.full</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Kpi_Schedule.full</item>
    </style>

    <!--<style name="Theme.Kpi_Schedule.TranslucentActionBar">-->
        <!--<item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    <!--</style>-->

    <style name="carddemo_googlenow_main_inner_lastupdate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Header.TitleText" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">#8000</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="Header.SubTitleText" parent="Header.TitleText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="MenuTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MenuTextAppearance.full">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="Material.RatingBar" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
